[alias]
	commit-counts = !git shortlog -sn
	ls-subtrees = !"git log | grep git-subtree-dir | awk '{ print $2 }'"	# See http://stackoverflow.com/questions/16641057/how-can-i-list-the-git-subtrees-on-the-root

[diff]
	tool = vimdiff

[difftool]
	prompt = false

[push]
	default = simple

